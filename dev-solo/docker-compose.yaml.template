version: '3'

networks:
  fabric-sample-nw:
    external: true

services:
  ca:
    container_name: ca
    hostname: ca
    image: hyperledger/fabric-ca
    environment:
      - FABRIC_CA_HOME=/etc/hyperledger/fabric-ca-server
      - FABRIC_CA_SERVER_CA_NAME=ca
      - FABRIC_CA_SERVER_CA_CERTFILE=/etc/hyperledger/crypto-config/peerOrganizations/org1.example.com/ca/ca.org1.example.com-cert.pem
      - FABRIC_CA_SERVER_CA_KEYFILE=/etc/hyperledger/crypto-config/peerOrganizations/org1.example.com/ca/<<CA_KEYFILE_PLACEHOLDER>>
    working_dir: /etc/hyperledger
    command: sh -c 'fabric-ca-server start -b admin:<<CA_ADMIN_PASSWORD>> -d'
    ports:
      - 7054
    volumes:
      - ./crypto-config/:/etc/hyperledger/crypto-config/
    networks:
      - fabric-sample-nw

  orderer:
    container_name: orderer
    hostname: orderer
    image: hyperledger/fabric-orderer
    environment:
      - ORDERER_GENERAL_LOGLEVEL=debug
      - ORDERER_GENERAL_LISTENADDRESS=0.0.0.0
      - ORDERER_GENERAL_GENESISMETHOD=file
      - ORDERER_GENERAL_GENESISFILE=/etc/hyperledger/artifacts/genesis.block
      - ORDERER_GENERAL_LOCALMSPID=OrdererMSP
      - ORDERER_GENERAL_LOCALMSPDIR=/etc/hyperledger/crypto-config/ordererOrganizations/example.com/orderers/orderer.example.com/msp
    working_dir: /etc/hyperledger
    command: orderer
    ports:
      - 7050
    volumes:
      - ./artifacts/:/etc/hyperledger/artifacts
      - ./crypto-config/:/etc/hyperledger/crypto-config/
    networks:
      - fabric-sample-nw

  peer0:
    container_name: peer0
    hostname: peer0
    image: hyperledger/fabric-peer
    environment:
      - CORE_VM_ENDPOINT=unix:///host/var/run/docker.sock
      - CORE_PEER_ID=peer0.org1.example.com
      - CORE_LOGGING_PEER=debug
      - CORE_CHAINCODE_LOGGING_LEVEL=DEBUG
      - CORE_PEER_LOCALMSPID=Org1MSP
      - CORE_PEER_MSPCONFIGPATH=/etc/hyperledger/crypto-config/peerOrganizations/org1.example.com/peers/peer0.org1.example.com/msp/
      - CORE_PEER_ADDRESS=peer0:7051
      - CORE_VM_DOCKER_HOSTCONFIG_NETWORKMODE=fabric-sample-nw
      - CORE_LEDGER_STATE_STATEDATABASE=CouchDB
      - CORE_LEDGER_STATE_COUCHDBCONFIG_COUCHDBADDRESS=couchdb:5984
      - CORE_LEDGER_STATE_COUCHDBCONFIG_USERNAME=
      - CORE_LEDGER_STATE_COUCHDBCONFIG_PASSWORD=
    working_dir: /etc/hyperledger
    command: peer node start
    ports:
      - 7051
      - 7053
    volumes:
      - /var/run/:/host/var/run/
      - ./artifacts/:/etc/hyperledger/artifacts
      - ./crypto-config/:/etc/hyperledger/crypto-config/
    networks:
      - fabric-sample-nw
    depends_on:
      - orderer
      - couchdb

  couchdb:
    container_name: couchdb
    hostname: couchdb
    image: hyperledger/fabric-couchdb
    environment:
      - COUCHDB_USER=
      - COUCHDB_PASSWORD=
    ports:
      - 5984
    # volumes:
    #   - ./couchdb_data:/opt/couchdb/data # persistent couchdb database using host volume
    networks:
      - fabric-sample-nw

  cli:
    container_name: cli
    hostname: cli
    image: hyperledger/fabric-tools
    tty: true
    environment:
      - GOPATH=/opt/gopath
      - CORE_VM_ENDPOINT=unix:///host/var/run/docker.sock
      - CORE_LOGGING_LEVEL=DEBUG
      - CORE_PEER_ID=cli
      - CORE_PEER_LOCALMSPID=Org1MSP
      - CORE_CHAINCODE_KEEPALIVE=10
    working_dir: /etc/hyperledger/artifacts
    command: /bin/bash
    volumes:
      - ./artifacts/:/etc/hyperledger/artifacts
      - ./crypto-config/:/etc/hyperledger/crypto-config/
      - ${GOPATH}/src/github.com/nmatsui/fabric-payment-sample-chaincode/:/opt/gopath/src/github.com/nmatsui/fabric-payment-sample-chaincode/
    networks:
      - fabric-sample-nw
    depends_on:
      - orderer
      - peer0
      - couchdb

  api:
    container_name: api
    hostname: api
    image: fabric-payment/api
    environment:
      - CA_ADDRESS=ca:7054
      - CA_NAME=ca
      - ORDERER_ADDRESS=orderer:7050
      - PEER_ADDRESS=peer0:7051
      - EVENTHUB_ADDRESS=peer0:7053
      - KEYSTORE_PATH=/etc/hyperledger/key_store
      - NODE_PATH=/etc/hyperledger
      - MSPID=Org1MSP
      - CHANNEL_NAME=<<CHANNEL_NAME>>
      - CHAINCODE_NAME=${CHAINCODE_NAME}
      - ADMIN_NAME=admin
      - USER_NAME=<<USER_NAME>>
    working_dir: /etc/hyperledger
    command: npm start
    ports:
      - 3000:3000
    volumes:
      - ${API_PATH}/api:/etc/hyperledger/api
      - ${API_PATH}/scripts:/etc/hyperledger/scripts
    networks:
      - fabric-sample-nw
    depends_on:
      - ca
      - orderer
      - peer0
